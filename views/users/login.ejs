<% layout("layouts/boilerplate") %>

<div class="row mt-5">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="card shadow border-0 rounded-4 p-4">
      <div class="text-center mb-4">
        <i class="fa-solid fa-circle-user fa-3x text-dark mb-2"></i>
        <h2 class="fw-bold">Welcome Back</h2>
        <p class="text-muted small">Please enter your details to login</p>
      </div>

      <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-4">
          <label for="username" class="form-label fw-semibold">Username</label>
          <div class="input-group">
            <span class="input-group-text bg-light border-secondary-subtle">
              <i class="fa-solid fa-user"></i>
            </span>
            <input
              type="text"
              name="username"
              id="username"
              placeholder="Enter your username"
              class="form-control border-secondary-subtle"
              required
            />
          </div>
          <div class="invalid-feedback">Username is required.</div>
        </div>

        <div class="mb-4">
          <label for="password" class="form-label fw-semibold">Password</label>
          <div class="input-group">
            <span class="input-group-text bg-light border-secondary-subtle">
              <i class="fa-solid fa-lock"></i>
            </span>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Enter your password"
              class="form-control border-secondary-subtle"
              required
            />
          </div>
          <div class="invalid-feedback">Password is required.</div>
        </div>

        <div class="d-grid">
          <button class="btn btn-success btn-lg rounded-pill shadow-sm py-2">
            Log In
          </button>
        </div>
      </form>

      <div class="text-center mt-4">
        <p class="small text-muted mb-0">
          Don't have an account?
          <a href="/signup" class="text-success text-decoration-none fw-bold"
            >Sign up here</a
          >
        </p>
      </div>
    </div>
  </div>
</div>
