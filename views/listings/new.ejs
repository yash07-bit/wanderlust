<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <div class="card shadow-sm border-0 rounded-4 p-4 mb-5">
      <h2 class="fw-bold mb-4 text-center">Create a New Listing</h2>

      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="e.g. Cozy Beachfront Villa"
            class="form-control border-secondary-subtle"
            required
          />
          <div class="valid-feedback">Title looks great!</div>
          <div class="invalid-feedback">Please provide a catchy title.</div>
        </div>

        <div class="mb-4">
          <label for="description" class="form-label fw-semibold"
            >Description</label
          >
          <textarea
            name="listing[description]"
            placeholder="Describe the ambiance, amenities, and what makes this place special..."
            class="form-control border-secondary-subtle"
            rows="5"
            required
          ></textarea>
          <div class="invalid-feedback">Please write a short description.</div>
        </div>

        <div class="mb-4">
          <label for="image" class="form-label fw-semibold">Upload Image</label>
          <div class="input-group">
            <input
              type="file"
              name="listing[image]"
              class="form-control border-secondary-subtle"
              id="imageUpload"
              required
            />
          </div>
          <small class="text-muted"
            >High-quality photos help your listing stand out.</small
          >
          <div class="invalid-feedback">
            Please upload an image for your listing.
          </div>
        </div>

        <div class="row">
          <div class="mb-4 col-md-4">
            <label for="price" class="form-label fw-semibold"
              >Price per night</label
            >
            <div class="input-group">
              <span class="input-group-text border-secondary-subtle"
                >&#8377;</span
              >
              <input
                type="number"
                name="listing[price]"
                placeholder="1200"
                class="form-control border-secondary-subtle"
                required
              />
            </div>
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <div class="mb-4 col-md-8">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control border-secondary-subtle"
              required
            />
            <div class="invalid-feedback">Country name is required.</div>
          </div>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="e.g. Goa, North Goa"
            class="form-control border-secondary-subtle"
            required
          />
          <div class="invalid-feedback">
            Please provide the city or area name.
          </div>
        </div>

        <div class="d-grid gap-2">
          <button
            class="btn btn-dark btn-lg rounded-pill add-btn py-3 shadow-sm"
          >
            <i class="fa-solid fa-plus me-2"></i>Create Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
