<% layout("layouts/boilerplate") %>

<div id="filters">
  <!-- DESKTOP FILTERS -->
  <div class="filters-center d-none d-sm-flex">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-city"></i>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tractor"></i>
      <p>Farms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tent"></i>
      <p>Camping</p>
    </div>
  </div>

  <!-- MOBILE FILTER DROPDOWN -->
  <div class="dropdown d-block d-sm-none">
    <button
      class="btn btn-outline-dark dropdown-toggle w-100"
      type="button"
      data-bs-toggle="dropdown"
    >
      <i class="fa-solid fa-filter"></i> Filters
    </button>
    <ul class="dropdown-menu w-100">
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-fire me-2"></i> Trending</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-bed me-2"></i> Rooms</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-city me-2"></i> Iconic Cities</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-mountain me-2"></i> Mountains</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-brands fa-fort-awesome me-2"></i> Castles</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-snowflake me-2"></i> Arctic</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-tractor me-2"></i> Farms</a
        >
      </li>
      <li>
        <a class="dropdown-item" href="#"
          ><i class="fa-solid fa-tent me-2"></i> Camping</a
        >
      </li>
    </ul>
  </div>

  <!-- TAX TOGGLE -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<!-- LISTINGS -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          <span class="listing-price" data-price="<%= listing.price %>">
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/ night
          </span>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  const taxSwitch = document.getElementById("switchCheckDefault");
  const taxInfo = document.getElementsByClassName("tax-info");

  taxSwitch.addEventListener("change", () => {
    for (let info of taxInfo) {
      const basePrice = Number(info.dataset.price);
      if (taxSwitch.checked) {
        info.textContent = `₹${(basePrice * 1.18).toLocaleString(
          "en-IN"
        )}/ night`;
      } else {
        info.textContent = `₹${basePrice.toLocaleString("en-IN")}/ night`;
      }
    }
  });
</script>
